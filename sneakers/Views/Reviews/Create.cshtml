@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@model sneakers.Models.ReviewsViewModels.ReviewsCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Review</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Review.Rating" class="control-label"></label>
                <input asp-for="Review.Rating" class="form-control" />
                <span asp-validation-for="Review.Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Review.ReviewMessage" class="control-label"></label>
                <input asp-for="Review.ReviewMessage" class="form-control" />
                <span asp-validation-for="Review.ReviewMessage" class="text-danger"></span>
            </div>
            <div class="form-group">                
                <label asp-for="Review.ReviewerName" class="control-label"></label>
                <input asp-for="Review.ReviewerName" class="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="@Model.User.Id" />
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
