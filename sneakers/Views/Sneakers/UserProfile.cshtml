@model sneakers.Models.SneakersViewModels.UserProfileViewModel

@{
    ViewData["Title"] = "UserProfile";
}

<h1>UserProfile</h1>
<div>
    <div>
        @Model.User.FirstName
    </div>
    <div>
        @Model.User.LastName
    </div>
    <div>
        @Model.User.Rating
    </div>
    <div>
        <a>Reviews</a>
        <a asp-action="Create" asp-controller="Reviews" asp-route-userId="@Model.User.Id">Write a review!</a>
    </div>
    <div>
        @foreach(var item in @Model.AllSneakers)
        {
        <div>
            @{var photoPath = "~/images/" + (item.ImgPath ?? "noimage.jpg"); }
            <img class="card-img-top imageThumbnail" src="~/images/@item.ImgPath"
                 asp-append-version="true" />
            <a asp-action="Details" asp-route-id="@item.SneakerId">Details</a>
        </div>
        
        }
    </div>
</div>

